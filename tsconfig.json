{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.ts"
  ]
}